<!doctype html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="initial-scale=1">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!--Include sqs scripts, meta tags, and user content from the code injection tab.-->
    {squarespace-headers}
  </head>

  <body>
    <div id="header">
        <div class="container">
            <h2 data-content-field="site-title">{website.siteTitle}</h2>

            <div id="navigation-toggle">
                <div></div>
                <div></div>
            </div>
        </div>
    </div>

    <div id="navigation">
        <squarespace:navigation navigationId="mainNavigation" template="main-navigation" />
    </div>

    <squarespace:query collection="blog" skip="2" limit="2">
        {.repeated section items}
            <div style="margin-top:58px;" class="sneakpeek" id="sneakpeek--{id}" >
                <span class="unimportant" id="sneakpeek__info--{id}"></span>
                <a href="{fullUrl}"><h3 class="sneakpeek__title">{title}</h3></a>

                <div id="excerpt--{id}">{excerpt}</div>
                <div id="graphic--{id}">
                    <img src="{assetUrl}" class="sneakpeek__image" alt="{title} graphic" />
                </div>
            
                <squarespace:script src="text.js" combo="false" />
                
                <script>
                    postmarkArticle(`sneakpeek__info--{id}`, `{addedOn}`, `{categories}`)
                    renderSneakpeek(`{tags}`, `graphic--{id}`, `excerpt--{id}`)
                </script>
            </div>
        {.end}
    </squarespace:query>

    <main role="main" data-content-field="main-content">{squarespace.main-content}</main>


    {#  <div class="footer">  }
        {#  <squarespace:navigation navigationId="mainNavigation" template="main-navigation" />  }

        {#  <div class="search">
            <div class="search__cursor"></div>
            <squarespace:block-field id="search--sitewide" columns="1" />
        </div>  }
    {#  </div>  }

    <!--Injection point for tracking scripts and user content from the code injection tab.-->
    {squarespace-footers}

  </body>
</html>

<squarespace:script src="design.js" combo="false" />
<script>
    navigationToggle.addEventListener('click', () => {
        toggleNavigation()
    })
</script>