<!doctype html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="initial-scale=1">

    <!--Include sqs scripts, meta tags, and user content from the code injection tab.-->
    {squarespace-headers}
  </head>

  <body>
    <div class="header">
        <h2>Fort York</h2>

        <div class="nav-icon">
            <div class="nav-icon--top"></div>
            <div class="nav-icon--bottom"></div>
        </div>
    </div>

    <squarespace:query collection="blog" limit="1" featured="true">
        <div>
            {.repeated section items}
                <span id="unimportant" class="unimportant"></span>
                <a href="{fullUrl}"><h3 class="no-underline">{title}</h3></a>

                <script>
                function postmarkArticle(publishedOn, mainCategory) {
        const basicInformation = document.getElementById('unimportant')
        const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sept', 'Oct', 'Nov', 'Dec']
        const publishedDate = new Date(parseInt(publishedOn))
        

        let month = months[publishedDate.getMonth()]
        let date = publishedDate.getDate()

        basicInformation.innerHTML = month + ' ' + date + ' —— ' + mainCategory
    }
    
    postmarkArticle(`{item.addedOn}, {item.categories[0]}`)
    </script>
            {.end}
        </div>
    </squarespace:query>


    {#  <div class="footer">
        <squarespace:navigation navigationId="socialnav" template="socialnav" />

        <div class="search">
            <div class="search__cursor"></div>
            <squarespace:block-field id="search--sitewide" columns="1" />
        </div>
    </div>  }

    <!--Injection point for tracking scripts and user content from the code injection tab.-->
    {squarespace-footers}

  </body>
</html>
