<!doctype html>
<html>
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="initial-scale=1">

    <!--Include sqs scripts, meta tags, and user content from the code injection tab.-->
    {squarespace-headers}
  </head>

  <body>
    <div class="header">
        <h2>Fort York</h2>

        <div class="nav-icon">
            <div class="nav-icon--top"></div>
            <div class="nav-icon--bottom"></div>
        </div>
    </div>

    <squarespace:query collection="blog" skip="2" limit="1" featured="true">
        <div>
            {.repeated section items}
                <span id="unimportant" class="unimportant"></span>
                <a href="{fullUrl}"><h3 class="no-underline">{title}</h3></a>

                <squarespace:script src="text.js" combo="false" />
                <script>postmarkArticle('feature', `{addedOn}`, `{categories}`)</script>
            {.end}
        </div>
    </squarespace:query>

    <squarespace:query collection="blog" limit="2">
        {.repeated section items}
            <div class="article-preview" id="article-{id}" style="margin-top:58px;">
                <span class="unimportant" id="preview-{id}"></span>
                <a href="{fullUrl}"><h3 class="article-title">{title}</h3></a>
                <div id="excerptfor-{id}">{excerpt}</div>

                <div id="imagefor-{id}">
                    <img src="{assetUrl}" alt="image for {title}" />
                </div>

                <squarespace:script src="text.js" combo="false" />
                <script>
                    console.log(`{tags}`)
                    
                    if (`{tags.includes('image-only')}` === true) {
                        document.getElementById('imagefor-{id}').style.display = 'block'
                        document.getElementById('excerptfor-{id}').style.display = 'none'
                    } else {
                        document.getElementById('excerptfor-{id}').style.display = 'block'
                        document.getElementById('imagefor-{id}').style.display = 'none'
                    }

                    postmarkArticle(`preview-{id}`, `{addedOn}`, `{categories}`)
                </script>
            </div>
        {.end}
    </squarespace:query>


    <div class="footer">
        <squarespace:navigation navigationId="socialnav" template="socialnav" />

        <div class="search">
            <div class="search__cursor"></div>
            <squarespace:block-field id="search--sitewide" columns="1" />
        </div>
    </div>

    <!--Injection point for tracking scripts and user content from the code injection tab.-->
    {squarespace-footers}

  </body>
</html>
