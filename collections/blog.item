<article>
    {.section item}
    
        <div class="article__header">
            <span class="unimportant" id="article__info--{id}"></span>
            <h3 class="no-underline" data-content-field="title">{title}</h3>
        </div>

        <div class="article__graphic">
            <img src="{assetUrl}" alt="{title} graphic" />
        </div>

        <div class="article__text">
            {body}
            <p style="color:#808080;">â€”{author.displayName}
        </div>

        <squarespace:script src="text.js" combo="false" />
        <script>
            postmarkArticle(`article__info--{id}`, `{addedOn}`, `{categories}`)
        </script>

    {.end}
</article>