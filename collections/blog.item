    {.section item}
        <div class="background">
            <span class="metadata" id="metadata--{id}"></span>
            <h3 data-content-field="title" class="no-underline">{title}</h3>
        </div>

        <div class="image-container image-height--medium">
            <img src="{assetUrl}" alt="{title}" />
        </div>


        <div class="article__graphic">
            <img src="{assetUrl}" alt="{title} graphic" />
        </div>

        <div class="article__text">
            {body}
            <p style="color:#808080;">â€”{author.displayName}
        </div>

        <squarespace:script src="text.js" combo="false" />
        <script>
            postmarkArticle(`article__info--{id}`, `{addedOn}`, `{categories}`)
        </script>

    {.end}
</div>