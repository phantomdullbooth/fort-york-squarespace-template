<div>
    {.section item}
        <div class="background">
            <span class="metadata">{addedOn|date %b %e}{.if categories}——{.repeated section categories}{@}{.alternates with}, {.end}{.end}</span>
            <h3 data-content-field="title" class="not-underlined">{title}</h3>
        </div>

        <div class="image-container image-height--medium">
            <img src="{assetUrl}" alt="{title}" />
        </div>

        <article>
            {body}
            <p style="color:#808080;">—{author.displayName}</p>
        </article>
    {.end}
</div>